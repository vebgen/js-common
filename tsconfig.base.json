{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@vebgen/dare": ["packages/dare/src/index.ts"],
            "@vebgen/debug": ["packages/debug/src/index.ts"],
            "@vebgen/js-common": ["packages/js-common/src/index.ts"],
            "@vebgen/logger": ["packages/logger/src/index.ts"],
            "@vebgen/top-contexts": ["packages/top-contexts/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
